<%- include ../partials/header.ejs %>



<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Edit Contacts</h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name </label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact name"
                    name="name" 
                    value="<%= book.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Contact Email</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Contact email"
                    name="author" 
                    value="<%= book.author %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Contact Date of Birth</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Contact date of birth"
                    name="published" 
                    value="<%= book.published %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Contact house Address</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the house address"
                    name="description" 
                    required>
                    <%= book.description %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Enter the Phone number</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the phone number"
                    name="price" 
                    value="<%= book.price %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

